{
    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Accelerator: app.py launch",
            "type": "python",
            "request": "launch",
            "program": "app.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Accelerator: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
            },
            "args": [
                "run",
                "--debugger",
                "--port", "8080"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Accelerator: PyTest",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "module": "pytest",
            "args": [
            ],
            "env": {
                "FLASK_ENV": "testing",
                "FLASK_DEBUG": "1"
            }
        }        
    ]
}